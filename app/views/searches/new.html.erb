<div class="well bs-component text-center">
  <h1>Advanced search</h1>

  <%= form_for @search, html: {class: "pure-form"} do |f| %>

<div class="col-md-9 col-md-offset-3">

    <div class="form-group is-empty">
       <label class="col-md-2 control-label text-danger">Keywords</label>
       <div class="col-md-10">
         <%= f.text_field :keywords, class:"form-control" %>
      </div>
    </div>

    <div class="form-group is-empty">
       <label class="col-md-2 control-label text-danger">Rating</label>
       <div class="col-md-10">
         <%= f.number_field :rating, class:"form-control" %>
      </div>
    </div>

    <div class="form-group is-empty">
       <label class="col-md-2 control-label text-danger">Max price</label>
       <div class="col-md-10">
         <%= f.number_field :max_price, class:"form-control" %>
      </div>
    </div>

      <div class="row">
        <div class="col-sm-offset-0 col-sm-8 mt20">
          <%= f.collection_check_boxes :category, Category.all, :id, :name do |cd| %>
            <%= cd.label(class: "checkbox-inline input_checkbox") { cd.check_box(class: "checkbox") + cd.text } %>
          <% end %>
        </div>
      </div>


    <div class="form-group">
     <div class="col-md-8 col-md-offset-0">
       <%= link_to 'Back', film_sessions_path, class:"btn btn-raised btn-default" %>
       <%= f.submit class:"btn btn-raised btn-primary m20" %>
      </div>
    </div>
</div>
  <% end %>
<div class="clearfix"></div>
</div>

