<p id="notice"><%= notice %></p>

<h1>Listing News</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.description %></td>
        <td><%= news.user_id %></td>
        <td><%= link_to 'Show', news, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_news_path(news), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_news_path, class: "btn btn-primary btn-lg"  %>


