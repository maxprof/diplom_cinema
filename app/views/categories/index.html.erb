<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><p><%= category.name %></p></td>
        <td><%= link_to 'Show', category, class: "btn btn-info" %></td>
        <% if user_signed_in? and current_user.admin? %>
          <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class:"btn btn-raised btn-primary" %>
