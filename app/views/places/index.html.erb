<p id="notice"><%= notice %></p>

<h1>Listing Places</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Cinema</th>
      <th>film session name</th>
      <th>film session start date</th>
      <th>film session time</th>
      <th>Place number</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.cinema_id %></td>
        <% session_id = place.film_session_id %>
        <% session_name = FilmSession.find(id = session_id).session_name %>
        <td><%= session_name %></td>
        <td><%= place.session_start_date  %></td>
        <td><%= place.session_time %></td>
        <td><%= place.place_number %></td>
        <td><%= place.status %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

