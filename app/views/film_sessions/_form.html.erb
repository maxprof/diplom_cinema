<%= form_for(@film_session) do |f| %>
  <% if @film_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@film_session.errors.count, "error") %> prohibited this film_session from being saved:</h2>

      <ul>
      <% @film_session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="control-group">
    <%= f.label :cinema_id, class:"control-group" %>
    <div class="controls">
      <%= collection_select( :film_session, :cinema_id, Cinema.all, :id, :cinema_name, {}, { :multiple => false } ) %>
    </div>
  </div>

  <div class="field">
    <%= f.label :session_name %><br>
    <%= f.text_field :session_name, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date, class:"form-control datepicker" %>
  </div>
  <div class="field">
    <%= f.label :number_of_session_place %><br>
    <%= f.number_field :number_of_session_place, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :trailer_link %><br>
    <%= f.text_field :trailer_link, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating, class:"form-control", :step => 'any' %>
  </div>
  <div class="field">
    <%= f.label "Poster" %><br>
    <%= f.file_field :film_sessions_poster %>
  </div>
  <div class="actions">
    <%= f.submit  class:"btn btn-primary m20" %>
    <%= link_to 'Back', film_sessions_path, class:"btn btn-danger m20" %>
  </div>
<% end %>

